FROM python:3.11-slim

LABEL maintainer="crypto-data-collection"
LABEL service="enhanced_technical_calculator"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements-ultra-minimal.txt ./
COPY requirements-financial.txt ./
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-financial.txt

# Copy shared modules first
COPY shared/ ./shared/

# Copy base collector template to root
COPY base_collector_template.py ./

# Copy service-specific code
# Copy the specific service files and directory
COPY services/enhanced_technical_calculator.py ./
COPY services/__init__.py ./services/
COPY services/base_collector.py ./services/

# Set Python path
ENV PYTHONPATH="/app:/app/shared:/app/services"

# Expose port
EXPOSE 8003

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD python -c "import enhanced_technical_calculator; print('OK')" || exit 1

# Run the collector
CMD ["python", "-m", "enhanced_technical_calculator"]
