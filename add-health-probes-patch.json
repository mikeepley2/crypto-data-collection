[
  {
    "op": "add",
    "path": "/spec/template/spec/containers/0/livenessProbe",
    "value": {
      "httpGet": {
        "path": "/health",
        "port": 8000
      },
      "initialDelaySeconds": 30,
      "periodSeconds": 30,
      "timeoutSeconds": 10,
      "failureThreshold": 3
    }
  },
  {
    "op": "add",
    "path": "/spec/template/spec/containers/0/readinessProbe", 
    "value": {
      "httpGet": {
        "path": "/health",
        "port": 8000
      },
      "initialDelaySeconds": 15,
      "periodSeconds": 15,
      "timeoutSeconds": 5,
      "failureThreshold": 3
    }
  },
  {
    "op": "add",
    "path": "/spec/template/spec/containers/0/resources",
    "value": {
      "requests": {
        "cpu": "100m",
        "memory": "256Mi"
      },
      "limits": {
        "cpu": "500m", 
        "memory": "512Mi"
      }
    }
  }
]