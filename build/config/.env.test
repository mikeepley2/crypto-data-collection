# Test Environment Configuration
ENVIRONMENT=test
LOG_LEVEL=DEBUG

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=test
DB_PASSWORD=test
DB_NAME=test_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Collection Intervals - Fast for testing
NEWS_COLLECTION_INTERVAL=10
SENTIMENT_PROCESSING_INTERVAL=10
TECHNICAL_CALCULATION_INTERVAL=30
MATERIALIZED_REFRESH_INTERVAL=20

# Batch Sizes - Small for testing
NEWS_BATCH_SIZE=2
SENTIMENT_BATCH_SIZE=1
TECHNICAL_BATCH_SIZE=5
MATERIALIZED_BATCH_SIZE=10

# Circuit Breaker - Lenient for testing
CIRCUIT_BREAKER_FAILURE_THRESHOLD=100
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=5

# Rate Limiting - No limits for testing
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=60

# ML Model Configuration - Use mock models in tests
CRYPTO_MODEL=mock
STOCK_MODEL=mock
MODEL_DEVICE=-1
HF_HOME=/tmp/test_huggingface_cache

# External APIs - Use mock endpoints
RSS_API_KEY=test_key
SENTIMENT_API_KEY=test_key

# Monitoring
METRICS_PORT=8080
HEALTH_CHECK_INTERVAL=5

# Alerting - Disabled for testing
ENABLE_ALERTING=false

# Security
SECRET_KEY=test-secret-key
JWT_SECRET=test-jwt-secret

# Performance - Minimal for testing
PARALLEL_WORKERS=1
MAX_CONNECTIONS=5
CONNECTION_TIMEOUT=10

# Testing Configuration
MOCK_EXTERNAL_APIS=true
USE_TEST_DATA=true
SKIP_ML_MODELS=true
DISABLE_BACKGROUND_TASKS=true

# Debugging - Full debugging for tests
ENABLE_DEBUG_LOGS=true
DEBUG_COLLECTOR_TIMING=true