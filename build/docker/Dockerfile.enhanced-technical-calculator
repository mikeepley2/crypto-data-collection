# Multi-stage build for Enhanced Technical Calculator Collector
FROM python:3.11-slim as base

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create app directory
WORKDIR /app

# Copy requirements first for better layer caching
COPY requirements.txt .

# Install Python dependencies including numerical libraries
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir numpy pandas scipy ta-lib

# Development stage
FROM base as development
ENV ENVIRONMENT=development
COPY . .
CMD ["python", "-m", "services.enhanced_technical_calculator_template"]

# Production stage
FROM base as production

# Create non-root user
RUN groupadd -r collector && useradd -r -g collector collector

# Copy application code
COPY templates/collector-template/ ./templates/collector-template/
COPY services/enhanced_technical_calculator_template.py ./services/

# Set ownership
RUN chown -R collector:collector /app

# Switch to non-root user
USER collector

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Expose port
EXPOSE 8080

# Run application
CMD ["python", "-m", "services.enhanced_technical_calculator_template"]