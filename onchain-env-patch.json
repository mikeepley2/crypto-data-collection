{
  "spec": {
    "template": {
      "spec": {
        "containers": [
          {
            "name": "onchain-data-collector",
            "env": [
              {
                "name": "COINGECKO_API_KEY",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "crypto-api-secrets",
                    "key": "coingecko-api-key"
                  }
                }
              },
              {
                "name": "COINGECKO_PLAN",
                "value": "premium"
              },
              {
                "name": "COINGECKO_MONTHLY_LIMIT",
                "value": "500000"
              },
              {
                "name": "COINGECKO_REQUESTS_PER_MINUTE",
                "value": "500"
              }
            ]
          }
        ]
      }
    }
  }
}