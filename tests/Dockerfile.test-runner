# Test Runner Dockerfile
# This container runs the comprehensive test suite

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    pkg-config \
    default-libmysqlclient-dev \
    curl \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements.txt .
COPY requirements-test.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-test.txt

# Install additional test dependencies
RUN pip install \
    pytest==7.4.3 \
    pytest-asyncio==0.21.1 \
    pytest-cov==4.1.0 \
    pytest-xdist==3.3.1 \
    pytest-timeout==2.1.0 \
    pytest-mock==3.11.1 \
    docker==6.1.3 \
    testcontainers==3.7.1 \
    mysql-connector-python==8.2.0 \
    redis==5.0.1 \
    requests==2.31.0 \
    aiohttp==3.9.1 \
    psutil==5.9.6

# Copy test files
COPY tests/ ./tests/
COPY services/ ./services/
COPY shared/ ./shared/
COPY templates/ ./templates/

# Create test results directory
RUN mkdir -p /app/test-results

# Set environment variables
ENV PYTHONPATH=/app
ENV TESTING=1
ENV ENVIRONMENT=test

# Health check script
RUN echo '#!/bin/bash\n\
echo "Test runner health check"\n\
python -c "import pytest; print(f\'pytest version: {pytest.__version__}\')"\n\
echo "Ready to run tests"' > /app/healthcheck.sh && \
    chmod +x /app/healthcheck.sh

HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD /app/healthcheck.sh

# Default command - wait for services then run tests
CMD ["bash", "-c", "sleep 30 && pytest tests/ -v --tb=short --durations=10"]