# Containerized Test Runner for CI/CD
# Eliminates local Python environment dependencies

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    pkg-config \
    default-libmysqlclient-dev \
    curl \
    netcat-openbsd \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements*.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install test dependencies
RUN pip install --no-cache-dir \
    pytest==7.4.3 \
    pytest-asyncio==0.21.1 \
    pytest-cov==4.1.0 \
    pytest-xdist==3.3.1 \
    pytest-timeout==2.1.0 \
    pytest-mock==3.11.1 \
    mysql-connector-python==8.2.0 \
    redis==5.0.1 \
    requests==2.31.0 \
    fastapi==0.104.1 \
    httpx==0.25.2 \
    psutil==5.9.6

# Create necessary directories
RUN mkdir -p /app/test-results /app/htmlcov

# Set environment variables for containerized testing
ENV PYTHONPATH=/app
ENV TESTING=1
ENV ENVIRONMENT=test
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Health check script for container orchestration
RUN echo '#!/bin/bash\n\
echo "ðŸ§ª Test runner container health check"\n\
python -c "import pytest, mysql.connector, redis; print(f\'Dependencies OK: pytest={pytest.__version__}\')"\n\
echo "âœ… Ready to run tests"' > /app/healthcheck.sh && \
    chmod +x /app/healthcheck.sh

HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
    CMD /app/healthcheck.sh

# Wait script for service dependencies
RUN echo '#!/bin/bash\n\
echo "â³ Waiting for test services..."\n\
until nc -z ${MYSQL_HOST:-test-mysql} ${MYSQL_PORT:-3306}; do\n\
  echo "Waiting for MySQL..."\n\
  sleep 2\n\
done\n\
echo "âœ… MySQL is ready"\n\
\n\
until nc -z ${REDIS_HOST:-test-redis} ${REDIS_PORT:-6379}; do\n\
  echo "Waiting for Redis..."\n\
  sleep 2\n\
done\n\
echo "âœ… Redis is ready"\n\
echo "ðŸš€ All services ready, starting tests..."' > /app/wait-for-services.sh && \
    chmod +x /app/wait-for-services.sh

# Default command - wait for services then run tests
CMD ["/app/wait-for-services.sh"]